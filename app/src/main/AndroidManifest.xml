<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecosha.ecobattle" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="経済バトル"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TopActivity">
            android:label="@string/app_name"
        </activity>
        <activity android:name=".ProductionActivity">
            android:label="@string/app_name"
        </activity>
        <activity android:name=".ProductionRActivity">
            android:label="@string/app_name"
        </activity>
        <activity android:name=".SaleActivity">
            android:label="@string/app_name"
        </activity>
        <activity android:name=".SaleRActivity">
            android:label="@string/app_name"
        </activity>
        <activity android:name=".RateRActivity">
            android:label="@string/app_name"
        </activity>
    </application>

</manifest>